<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc = "http://www.springframework.org/schema/jdbc"
	xmlns:aop="http://www.springframework.org/schema/aop"  
	
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		
		http://www.springframework.org/schema/jdbc		http://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd
			
        http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd    
        http://www.springframework.org/schema/aop   	http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">
        
   
   <context:component-scan base-package="book"></context:component-scan>

	<bean id="jdbcTemplate"
		class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg name="dataSource"
			ref="driverDataSource">
		</constructor-arg>
	</bean>


	<bean id="driverDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<constructor-arg name="url"
			value="jdbc:mysql://127.0.0.1:3306/book_jdbc" />
		<constructor-arg name="username" value="root" />
		 <constructor-arg name="password" value="" /> 
	</bean>
    
<bean id = "bookDao" class = "books.dao.BookDaoImpl">
    	<property name="jdbcTemplate" ref = "jdbcTemplate"></property>
    </bean>
    
    <aop:aspectj-autoproxy/>
     
    <!--  
    <bean id="bookDao1" class="books.dao.BookDaoImpl" /> -->
 
    <!-- Logging Aspect -->
    <bean id="loggingAspects" class="books.LoggingAspects" />
</beans>